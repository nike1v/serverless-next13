{
  "version": "1.2.6",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": [
    "packages/compat-layers/*",
    "packages/serverless-components/*",
    "packages/libs/*",
    "packages/deprecated/*"
  ]
}
